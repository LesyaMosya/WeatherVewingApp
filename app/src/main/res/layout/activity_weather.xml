<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:android =  "http://schemas.android.com/apk/res/android"
    xmlns:tools =  "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context =  ".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/cityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/city" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/currentWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style = "@style/secondText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:gravity="center"
                        android:contentDescription="@string/description"/>

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style = "@style/current_weather" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/feelsLikeString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feelsLikeString"
                        style = "@style/feels_like_base" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/feelsLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style = "@style/feels_like_base" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentWeather"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/windString"
                        style = "@style/base" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/speedWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style = "@style/base" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/speedString"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speedString"
                            style = "@style/base" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/humidityString"
                        style = "@style/base" />

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style = "@style/base" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nextDaysWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsContainer"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/TomorrowWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="10dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/tomorrow"
                        android:layout_height="wrap_content"
                        style="@style/base_name"
                        android:text="@string/tomorrow"/>

                    <ImageView
                        android:id="@+id/iconFirst"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/description"/>

                    <TextView
                        android:id="@+id/firstTemp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style = "@style/base" />

                    <TextView
                        android:id="@+id/firstFeelsLike"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style="@style/feels_like" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/thirdDayWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/thirdDay"
                        android:layout_height="wrap_content"
                        style="@style/base_name" />

                    <ImageView
                        android:id="@+id/iconThird"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/description" />

                    <TextView
                        android:id="@+id/thirdTemp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style = "@style/base" />

                    <TextView
                        android:id="@+id/thirdFeelsLike"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style="@style/feels_like"  />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourthDayWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/fourthDay"
                        android:layout_height="wrap_content"
                        style="@style/base_name" />

                    <ImageView
                        android:id="@+id/iconFourth"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/description"/>

                    <TextView
                        android:id="@+id/fourthTemp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style = "@style/base" />

                    <TextView
                        android:id="@+id/fourthFeelsLike"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style="@style/feels_like"  />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fifthDayWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/fifthDay"
                        android:layout_height="wrap_content"
                        style="@style/base_name" />

                    <ImageView
                        android:id="@+id/iconFifth"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/description" />

                    <TextView
                        android:id="@+id/fifthTemp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style = "@style/base" />

                    <TextView
                        android:id="@+id/fifthFeelsLike"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        style="@style/feels_like"  />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>

